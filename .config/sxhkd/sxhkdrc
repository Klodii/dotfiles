# Example file in /usr/share/doc/bspwm/examples/sxhkdrc

# Restart sxhkd config file (if you edit this file)
super + Escape
    pkill -USR1 -x sxhkd
# Restart bspwm configuration
super + r
	bspc wm -r
# Quit bspwm (LogOut)
super + alt + q
	bspc quit
# Shutdown PC
super + alt + s
    bspc quit && systemctl poweroff
# Restart PC
super + alt + r
    bspc quit && systemctl reboot
# Lock screen
super + alt + l
    slock


# Close focused window
super + q
    bspc node -c

# Launch a terminal
super + {Return,BackSpace}
    st

# Launch a browser
super + w
    zen-browser

# Lauch dmenu (app launcher)
super + p
    dmenu_run


# ---- WINDOW FOCUS ----
# Focus next/previous window
super + {j,k}
    bspc node -f {next,prev}.local

# Focus in cardinal directions
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

# ---- WINDOW MOVEMENT ----
# Move window in cardinal directions
super + shift + {h,j,k,l}
    bspc node -s {west,south,north,east}

# ---- DESKTOPS ----
# Switch to desktop 1–9
super + {1-9}
    bspc desktop -f {1-9}

# Move focused window to desktop 1–9
super + shift + {1-9}
    bspc node -d {1-9}

# Change layout to tiled
super + shift + t
    bspc desktop -l tiled

# Change layout to monocle
super + shift + m
    bspc desktop -l monocle

# Switch between layouts
super + shift + n
    bspc desktop -l next

# ---- LAYOUT ----
# Toggle floating mode
super + space
    bspc node -t ~floating

# Balance window sizes
super + b
    bspc node @/ -B

# ---- SYSTEM / UTILITY ----
# Volume
XF86AudioRaiseVolume
    amixer -q sset Master 5%+

XF86AudioLowerVolume
    amixer -q sset Master 5%-

XF86AudioMute
    amixer -q sset Master toggle

# Brightness
XF86MonBrightnessUp
    brightnessctl s +5%

XF86MonBrightnessDown
    brightnessctl s 5%-
