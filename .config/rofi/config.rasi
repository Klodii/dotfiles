configuration {
  modes: [ combi ];
  combi-modes: [ window, drun, run ];
  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}

@theme "/usr/share/rofi/themes/android_notification.rasi"

entry {
    cursor: pointer;
    cursor-color: rgb(228,155,27);
    cursor-width: 10px;
}

element {
  orientation: horizontal;
  children: [ element-text, element-icon ];
}

element-icon {
    size: 1.2em;
}
