# settings
set hidden true
set ignorecase true
set icons true

set info size
set dircounts

set number
set relativenumber

set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id

cmd mkfile ${{
  read -p "File Name: " name
  $EDITOR $ans
}}

# extract the current file with the right command
# (xkcd link: https://xkcd.com/1168/)
cmd extract ${{
    set -f
    case $f in
        *.tar.bz|*.tar.bz2|*.tbz|*.tbz2) tar xjvf $f;;
        *.tar.gz|*.tgz) tar xzvf $f;;
        *.tar.xz|*.txz) tar xJvf $f;;
        *.gz) gunzip $f ;;
        *.zip) unzip $f;;
        *.rar) unrar x $f;;
        *.7z) 7z x $f;;
        *) echo "'$f' cannot be extracted via extract function" ;;
    esac
}}

# compress current file or selected files with tar and gunzip
cmd tar ${{
    set -f
    mkdir $1
    cp -r $fx $1
    tar czf $1.tar.gz $1
    rm -rf $1
}}

# compress current file or selected files with zip
cmd zip ${{
    set -f
    mkdir $1
    cp -r $fx $1
    zip -r $1.zip $1
    rm -rf $1
}}

# remap
map <esc> quit
map <enter> open
map . set hidden!
map y copy
map x cut
map p paste
map DD delete
map R reload
map C clear

map m
map md :push %mkdir<space>
map mf mkfile

map ax extract

# movements
map gb cd ~/.local/bin
map gc cd ~/.config
map gt cd /tmp
